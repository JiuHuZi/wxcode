@import "../icon.wxss";
page{
    margin: 0;
    padding: 0;
    /* background-color: lightblue; */
    /* background-image: linear-gradient(#ffd1dc, #a8cef5); */
}
.content .header{
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 40rpx;
    position: relative;
}
.content .header .bg{
    height: 60vh;
    width: 100%;
    position: absolute;
    z-index: -1;
}
.search {
    display: flex;
    justify-content: center;
    margin-top: 15px;
}

.iconfont {
    font-size: 30px;
    padding-right: 10px;
    vertical-align: middle;
}

.search_ipt {
    width: 45%;
    /* border: 1px solid black; */
    margin-right: 5px;
    /* color: #000; */
    margin-top: 3px;
    text-align: center;
}
.city{
    text-align: center;
    /* color: #000; */
    margin-top: 5px;
}
.temp{
    text-align: center;
    font-size: 80px;
    /* color: #000; */
    margin-top: 20px;
    /* font-weight: bold; */
}
.today{
    width: 70%;
    text-align: center;
}
.wStatus{
    /* color: #000; */
    text-align: center;
    font-size: 30px;
}

.msg{
    display: flex;
    justify-content: center;
    font-size: 16px;
    /* color: #000; */
}
.msg view{
    flex: 1;
    /* padding-right: 20px; */
    margin-top: 15px;
    width: 100%;
    font-weight: bold;
}
.nowtemp{
    font-weight: bold;
    margin-top: 15px;
    font-size: 16px;
}

.feture{
    margin: 20px;
    height: 100%;
    box-sizing: border-box;
    display: flex;
}
.feture view{
    float: left;
    margin: 5px;
}
.feture view view{
    width: 100%;
    clear: both;
    font-size: 14px;
    text-align: center;
}
.foot{
    height:20vh ;
    position: fixed;
    bottom: 13vh;
    width: 100%;
    /* background-color: rgba(0,0,0,.7); */
    /* color:#fff; */
    /* border-radius: 20px; */
}
.fweather:nth-child(1),.fweather:nth-child(2){
    /* border-left: 1px solid #eee; */
    border-right: 1px solid #ccc;
}
.fweather{
    flex: 1;
    padding-right: 20px;
}
.fmsg{
    display: flex;
    justify-content: center;
    text-align: center;
}
