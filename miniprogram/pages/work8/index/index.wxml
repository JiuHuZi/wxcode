<import src="../template/template.wxml" />
<view class="page">
    <!-- 页头 -->
    <template is='header' />
    <!-- 设置展示图标 -->
    <view class="body">
        <view class="left">
            <view class="l1">
                <navigator url="../person/person">
                    <image class="pic1" src="../images/1.png" />
                </navigator>
            </view>
            <view class="l2">
                <text>学院简介</text>
            </view>
            <view class="l3">
                <navigator url="../map/map">
                    <image class="pic1" src="../images/3.png" />
                </navigator>
            </view>
            <view class="l4">
                <text>地图导航</text>
            </view>
            <view class="l5">
                <navigator url="../xrld/xrld">
                    <image class="pic1" src="../images/5.png" />
                </navigator>
            </view>
            <view class="l6">
                <text>主要领导</text>
            </view>
        </view>
        <view class="right">
            <view class="l1">
                <navigator url="../case/case">
                    <image class="pic1" src="../images/2.png"></image>
                </navigator>
            </view>
            <view class="l2">
                <text>学院视频</text>
            </view>
            <view class="l3" bindtap="phone">
                <image class="pic1" src="../images/4.png" />
            </view>
            <view class="l4">
                <text>联系方式</text>
            </view>
            <view class="l5">
                <navigator url="../xxfg/xxfg">
                    <image class="pic1" src="../images/6.png" />
                </navigator>
            </view>
            <view class="l6">
                <text>校园风光</text>
            </view>
        </view>
    </view>
    <!-- 页脚 -->
    <template is='footer' />
</view>