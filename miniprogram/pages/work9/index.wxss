.content{
    text-align: center;
    /* margin: 58rpx; */
    background-color: #3eb575;
    position: relative;
}
.title{
    color:#fff;
    font-size: 30px;
    background-color: #3eb575;
    padding: 20px;
    text-align: center;
}
.title span{
    padding-bottom: 5px;
    border-bottom: 3px solid #fff;
}
.nav{
    display: flex;
    margin-bottom: 20px;
    margin-top: 20px;
    color: #fff;
}
.picker{
    margin-left: 20px;
}
.chage{
    width: 60%;
    display: flex;
    justify-content:flex-end;
}
.tab{
    padding: 5px 10px 5px;
    margin-left: 20px;
    margin-top: -5px;
}
.selected{
    border: 1px solid #fff;
    border-radius: 20px;
}

.balance{
    margin-bottom: 20px;
    display: flex;
}
.balance_title{
    color: #eee;
    font-size: 18px;
    margin-left: 20px;
}
.balance_money{
    font-size: 60px;
    color: #fff;
    margin-left: -50px;
    margin-top: 30px;
}
.monry_list{
    margin-top: 20px;
}
.button{
    /* margin: 50rpx; */
    position: fixed;
    bottom: 10%;
    right: 20px;
    border-radius: 100%;
    width: 70px;
    height: 70px;
    line-height: 70px;
}
.total{
    position: absolute;
    bottom: 50%;
    right: 5%;
    /* width: 100%; */
    text-align: center;
    font-size: 30rpx;
    color: #fff;
}
.total span{
    margin-left: 20px;
}
.url{
    position: absolute;
    top:5%;
    color:#fff;
    left: 20px;
}
.mod{
    width: 70%;
    height: 40vh;
    background-color: #fff;
    position: fixed;
    top: 30%;
    left: 15%;
    border-radius: 20px;
    box-shadow: 15px 5px 35px rgba(0, 0, 0, .7);
}
.mod .text{
    text-align: center;
    font-size: 30px;
    border-bottom: 1px solid #000;
    padding-bottom: 10px;
    padding-top: 10px;
    margin-bottom: 30px;
    background-color: #eee;
    border-top-left-radius: 20px;
    border-top-right-radius: 20px;
}
.money_ipt{
    border-bottom: 1px solid #000;
    font-size: 40px;
    height: 50px;
}
.list{
    border-bottom: 1px dashed #000;
    padding-bottom:5px ;
    margin-top: 15px;
}
.Mtotal{
    color:#fff;
    font-weight: bold;
}
.Mtotal span{
    margin-right: 20px;
}
.changeDay{
    width: 80%;
    height: 20px;
    border: 1px solid #000;
    display: flex;
    border-radius: 30px;
    margin: 20px auto;
    padding: 10px;
    overflow: hidden;
}
.changeDay>.picker{
    font-size: 20px;
    line-height: 20px;
}
.changeDay picker{
    width: 65%;
}
.changeTitle{
    width: 35%;
    height: 20px;
    background-color: #000;
    text-align: center;
    color: #fff;
    margin-top: -10px;
    margin-left: -10px;
    padding: 10px;
    border-top-left-radius: 30px;
    border-bottom-left-radius: 30px;
    font-size: 14px;
}